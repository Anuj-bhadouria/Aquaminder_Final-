<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8FAFD"
    android:animateLayoutChanges="true">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:scrollbars="none">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="24dp">

            <!-- Header Section -->
            <TextView
                android:id="@+id/tvBrandName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Aquaminder"
                android:textSize="30sp"
                android:fontFamily="@font/poppins_medium"
                android:textStyle="bold"
                android:textColor="#0D1B34"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="16dp"/>

            <TextView
                android:id="@+id/tvLogin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sign In"
                android:textSize="16sp"
                android:textColor="#0EA5E9"
                android:textStyle="bold"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackground"
                android:padding="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBaseline_toBaselineOf="@id/tvBrandName"/>

            <TextView
                android:id="@+id/tvCreateAccount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Create Account"
                android:textSize="28sp"
                android:textStyle="bold"
                android:textColor="#0D1B34"
                android:layout_marginTop="32dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvBrandName"/>

            <TextView
                android:id="@+id/tvSubtitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Join Aquaminder to monitor water usage effectively."
                android:textSize="15sp"
                android:textColor="#718096"
                android:layout_marginTop="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvCreateAccount"/>

            <!-- Main Content Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardRegister"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                app:cardCornerRadius="24dp"
                app:cardElevation="8dp"
                app:cardBackgroundColor="@android:color/white"
                app:strokeColor="#F1F5F9"
                app:strokeWidth="1dp"
                app:layout_constraintTop_toBottomOf="@id/tvSubtitle"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="24dp">

                    <!-- Name Input -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/tilName"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:boxCornerRadiusTopStart="16dp"
                        app:boxCornerRadiusTopEnd="16dp"
                        app:boxCornerRadiusBottomStart="16dp"
                        app:boxCornerRadiusBottomEnd="16dp"
                        app:boxStrokeColor="#E2E8F0"
                        app:boxStrokeWidth="1.5dp"
                        app:startIconDrawable="@drawable/ic_person_outline"
                        app:startIconTint="#64748B"
                        app:hintEnabled="false">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/et_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@null"
                            android:hint="Full Name"
                            android:textColor="#000000"
                            android:textColorHint="#94A3B8"
                            android:inputType="textPersonName"
                            android:paddingTop="16dp"
                            android:paddingBottom="16dp"/>
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Email Input -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/tilEmail"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        app:boxCornerRadiusTopStart="16dp"
                        app:boxCornerRadiusTopEnd="16dp"
                        app:boxCornerRadiusBottomStart="16dp"
                        app:boxCornerRadiusBottomEnd="16dp"
                        app:boxStrokeColor="#E2E8F0"
                        app:boxStrokeWidth="1.5dp"
                        app:startIconDrawable="@drawable/ic_email_outline"
                        app:startIconTint="#64748B"
                        android:textColor="#000000"
                        app:hintEnabled="false">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/et_email"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="#000000"
                            android:background="@null"
                            android:hint="Email Address"
                            android:textColorHint="#94A3B8"
                            android:inputType="textEmailAddress"
                            android:paddingTop="16dp"
                            android:paddingBottom="16dp"/>
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Password Input -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/tilPassword"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        app:boxCornerRadiusTopStart="16dp"
                        android:textColor="#000000"
                        app:boxCornerRadiusTopEnd="16dp"
                        app:boxCornerRadiusBottomStart="16dp"
                        app:boxCornerRadiusBottomEnd="16dp"
                        app:boxStrokeColor="#E2E8F0"
                        app:boxStrokeWidth="1.5dp"
                        app:startIconDrawable="@drawable/ic_lock_outline"
                        app:startIconTint="#64748B"
                        app:endIconMode="password_toggle"
                        app:endIconTint="#64748B"
                        app:hintEnabled="false">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/et_password"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@null"
                            android:hint="Password"
                            android:textColor="#000000"
                            android:textColorHint="#94A3B8"
                            android:inputType="textPassword"
                            android:paddingTop="16dp"
                            android:paddingBottom="16dp"/>
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Phone Input -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/tilPhone"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        app:boxCornerRadiusTopStart="16dp"
                        app:boxCornerRadiusTopEnd="16dp"
                        app:boxCornerRadiusBottomStart="16dp"
                        app:boxCornerRadiusBottomEnd="16dp"
                        app:boxStrokeColor="#E2E8F0"
                        app:boxStrokeWidth="1.5dp"
                        app:startIconDrawable="@drawable/ic_phone_outline"
                        app:startIconTint="#64748B"
                        android:textColor="#000000"
                        app:hintEnabled="false">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/et_phone"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@null"
                            android:hint="Phone Number"
                            android:textColor="#000000"
                            android:textColorHint="#94A3B8"
                            android:inputType="phone"
                            android:paddingTop="16dp"
                            android:paddingBottom="16dp"/>
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Address Input -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/tilAddress"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        app:boxCornerRadiusTopStart="16dp"
                        app:boxCornerRadiusTopEnd="16dp"
                        app:boxCornerRadiusBottomStart="16dp"
                        app:boxCornerRadiusBottomEnd="16dp"
                        app:boxStrokeColor="#E2E8F0"
                        app:boxStrokeWidth="1.5dp"
                        app:startIconDrawable="@drawable/ic_home_outline"
                        app:startIconTint="#64748B"
                        app:hintEnabled="false">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/et_address"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@null"
                            android:textColor="#000000"
                            android:hint="Address"
                            android:textColorHint="#94A3B8"
                            android:inputType="textPostalAddress"
                            android:paddingTop="16dp"
                            android:paddingBottom="16dp"/>
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Pincode Input -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/tilPincode"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:textColor="#000000"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        app:boxCornerRadiusTopStart="16dp"
                        app:boxCornerRadiusTopEnd="16dp"
                        app:boxCornerRadiusBottomStart="16dp"
                        app:boxCornerRadiusBottomEnd="16dp"
                        app:boxStrokeColor="#E2E8F0"
                        app:boxStrokeWidth="1.5dp"
                        app:startIconDrawable="@drawable/ic_map_marker_outline"
                        app:startIconTint="#64748B"
                        app:hintEnabled="false">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/et_pincode"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@null"
                            android:hint="Pincode"
                            android:textColorHint="#94A3B8"
                            android:inputType="number"
                            android:maxLength="6"
                            android:paddingTop="16dp"
                            android:paddingBottom="16dp"/>
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Service Area Input (Hidden by default) -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/tilServiceArea"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:visibility="gone"
                        app:boxCornerRadiusTopStart="16dp"
                        app:boxCornerRadiusTopEnd="16dp"
                        android:textColor="#000000"
                        app:boxCornerRadiusBottomStart="16dp"
                        app:boxCornerRadiusBottomEnd="16dp"
                        app:boxStrokeColor="#E2E8F0"
                        app:boxStrokeWidth="1.5dp"
                        app:startIconDrawable="@drawable/ic_map_marker_outline"
                        app:startIconTint="#64748B"
                        app:hintEnabled="false">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/et_service_area"
                            android:layout_width="match_parent"
                            android:textColor="#000000"
                            android:layout_height="wrap_content"
                            android:background="@null"
                            android:hint="Service Area"
                            android:textColorHint="#94A3B8"
                            android:inputType="text"
                            android:paddingTop="16dp"
                            android:paddingBottom="16dp"/>
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Register Button -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_register"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:text="Register"
                        android:textAllCaps="false"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:letterSpacing="0.02"
                        android:textColor="@android:color/white"
                        app:backgroundTint="#0EA5E9"
                        app:cornerRadius="16dp"
                        android:layout_marginTop="24dp"
                        app:icon="@drawable/ic_arrow_forward"
                        app:iconGravity="textEnd"
                        app:iconTint="@android:color/white"
                        android:stateListAnimator="@null"
                        android:elevation="4dp"/>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Footer -->
            <TextView
                android:id="@+id/tvFooter"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="By signing up, you agree to our Terms &amp; Privacy."
                android:textSize="12sp"
                android:textColor="#94A3B8"
                android:gravity="center"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="24dp"
                app:layout_constraintTop_toBottomOf="@id/cardRegister"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>