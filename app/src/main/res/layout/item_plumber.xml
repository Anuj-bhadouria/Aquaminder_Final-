<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/iv_plumber_image"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:background="@drawable/bg_profile_picture"
            android:src="@drawable/ic_person"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="16dp">

            <TextView
                android:id="@+id/tv_plumber_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Plumber Name"
                android:textStyle="bold"
                android:textSize="18sp"/>

            <TextView
                android:id="@+id/tv_plumber_details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4.9 • 120 jobs • 12 min away"
                android:layout_marginTop="4dp"/>

        </LinearLayout>

        <TextView
            android:id="@+id/tv_plumber_rate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$45/hr"
            android:textSize="16sp"
            android:textStyle="bold"/>

    </LinearLayout>

</androidx.cardview.widget.CardView>